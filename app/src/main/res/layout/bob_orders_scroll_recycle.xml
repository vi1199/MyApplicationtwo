<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#EAEAEA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bob_widget_toolbar_order"
        android:background="@color/colorAccent"
        app:title=" Details "
        app:menu="@menu/detailsmenu"
        >

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bob_recycle_view_horscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="2dp"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/bob_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:paddingLeft="12dp"
                tools:text="Name"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:id="@+id/bob_details_no_of_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="No Of Items"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/bob_details_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Order Id"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/bob_details_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Total Amount"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/bob_details_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="city"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                >
            <ImageView
                android:id="@+id/bob_details_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@mipmap/shareme"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"/>
            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>