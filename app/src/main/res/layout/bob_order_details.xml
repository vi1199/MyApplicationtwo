<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:elevation="5dp"
        android:title="Order Details"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:padding="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/bob_details_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/bob_no_image_error"
            />
        <TextView
            android:id="@+id/bob_details_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Size "
            android:gravity="center"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />
            <TextView
            android:id="@+id/bob_details_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Color "
            android:gravity="center"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
            <TextView
                android:id="@+id/bob_details_Prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Prize "
                android:gravity="center"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        card_view:cardCornerRadius="2dp"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bob_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:paddingLeft="16dp"
                tools:text="Name"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                />
            <TextView
                android:id="@+id/bob_details_no_of_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="No Of Items"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"/>
            <TextView
                android:id="@+id/bob_details_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Order Id"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"/>
            <TextView
                android:id="@+id/bob_details_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Total Amount"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"/>
            <TextView
                android:id="@+id/bob_details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Address"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"/>
            <TextView
                android:id="@+id/bob_details_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="time"
                android:textSize="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"/>

            </LinearLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>